mixin BadgeButtonsDemo 
  button.btn.btn-primary.d-flex.align-items-center(type='button')
    | Notifications 
    span.badge.bg-primary-dark.ms-2 4

mixin BadgePositionedDemo 
  button.btn.btn-primary.position-relative(type='button')
    = '\n'
    | Inbox
    span.position-absolute.top-0.start-100.translate-middle.badge.rounded-pill.bg-primary-dark
      | 99+
      span.visually-hidden unread messages
    = '\n'


mixin BadgePhoenixDemo
  each value in colors
    span.badge.badge-phoenix(class=`badge-phoenix-${value}`)
      +cleanText(value)
    = '\n'

mixin BadgePhoenixIconDemo
  -
    var icons = [
      'package',
      'plus',
      'check',
      'info',
      'alert-octagon',
      'x',
    ]
  each value,index in colors
    span.badge.badge-phoenix.fs-10(class=`badge-phoenix-${value}`)
      span.badge-label
        +cleanText(value)
      span.ms-1(data-feather=icons[index] style='height:12.8px;width:12.8px;')
    = '\n'


mixin BadgeSolidDemo
  each value in colors
    span.badge(class=`text-bg-${value}`)
      +cleanText(value)
      //- span.fas.fa-bell.ms-2
    = '\n'

