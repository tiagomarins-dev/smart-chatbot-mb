mixin ContactBySource(number,iconColor,source)
	.col-6.col-xl-4
		.d-flex.flex-column.flex-center.align-items-sm-start.flex-md-row.justify-content-md-between.flex-xxl-column.p-3.ps-sm-3.ps-md-4.p-md-3.h-100&attributes(attributes)
			.d-flex.align-items-center.mb-1
				span.fa-solid.fa-square.fs-11.me-2(data-fa-transform='up-2' class=`${iconColor}`)
				span.mb-0.fs-9.text-body=source
			h3.fw-semibold.ms-xl-3.ms-xxl-0.pe-md-2.pe-xxl-0.mb-0.mb-sm-3=number

mixin ContactBySources
	.row
		.col-sm-7.col-md-8.col-xxl-8.mb-md-3.mb-lg-0
			h3 New Contacts by Source
			p.text-body-tertiary Payment received across all channels
			.row.g-0
				+ContactBySource('80','text-primary','Organic').border-1.border-bottom.border-end.border-translucent
				+ContactBySource('65','text-success','Paid Search').border-1.border-bottom.border-end-md-0.border-end-xl.border-translucent
				+ContactBySource('40','text-info','Direct').border-1.border-bottom.border-end.border-end-md.border-end-xl-0.border-translucent
				+ContactBySource('220','text-info-light','Social').border-1.border-end-xl.border-bottom.border-bottom-xl-0.border-translucent
				+ContactBySource('120','text-danger-lighter','Referrals').border-1.border-end.border-translucent
				+ContactBySource('35','text-warning-light','Others')
		.col-sm-5.col-md-4.col-xxl-4.my-3.my-sm-0
			.position-relative.d-flex.flex-center.mb-sm-4.mb-xl-0.echart-contact-by-source-container.mt-sm-7.mt-lg-4.mt-xl-0
				.echart-contact-by-source(style='min-height:245px;width:100%')
				.position-absolute.rounded-circle.bg-primary-subtle.top-50.start-50.translate-middle.d-flex.flex-center(style="height:100px; width:100px;")
					h3.mb-0.text-primary-dark.fw-bolder(data-label)

mixin DealForecastProgress
	.w-100
		.d-flex.flex-start
			p.mb-2.text-body-tertiary.fw-semibold.fs-9(style='width: 20.72%') $21.0k
			p.mb-2.text-body-tertiary.fw-semibold.fs-9(style='width: 35.76%') $3.4k
			p.mb-2.text-body-tertiary.fw-semibold.fs-9(style='width: 25.38%') $15.1k
			p.mb-2.text-body-tertiary.fw-semibold.fs-9(style='width: 25.14%') $4.6k
		.progress.mb-3.rounded-3(style='height: 10px;')
			.progress-bar.border-end.border-2.bg-primary-dark(role='progressbar' style='width: 20.72%' aria-valuenow='20.72' aria-valuemin='0' aria-valuemax='100' data-bs-toggle="tooltip" data-bs-placement="top" title="Appointment")
