			.progress-bar.bg-info(role='progressbar' style='width: 25.14%' aria-valuenow='25.14' aria-valuemin='0' aria-valuemax='100' data-bs-toggle="tooltip" data-bs-placement="top" title="Contact Sent")

mixin DealForecastTableRow(data,index)
	tr.hover-actions-trigger.btn-reveal-trigger.position-static
		td.contact.border-end.border-translucent.align-middle.white-space-nowrap.py-2.ps-0.px-3
			a.fw-semibold(href='#!')= `${data.contact}`
		td.appointment.border-end.border-translucent.align-middle.white-space-nowrap.text-end.fw-semibold.text-body.py-2.px-3=data.appointment
		td.qualified.border-end.border-translucent.align-middle.white-space-nowrap.text-end.fw-semibold.text-body.py-2.px-3=`$${data.qualified}`
		td.closed-won.border-end.border-translucent.align-middle.white-space-nowrap.text-end.fw-semibold.text-body.py-2.px-3=`$${data.closed_won}`
		td.contact-sent.border-end-0.align-middle.white-space-nowrap.text-end.fw-semibold.text-body.ps-3.py-2=`$${data.contact_sent}`

