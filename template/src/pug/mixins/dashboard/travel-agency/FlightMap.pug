  .mapbox-container
    .position-relative
      #flightMap.map.rounded-3
      .mapbox-control-btn.flight-map-control-btn
        button.zoomIn.d-none.d-md-block
          span.fa-solid.fa-plus
        button.zoomOut.d-none.d-md-block
          span.fa-solid.fa-minus
        button.fullScreen.mt-md-3
          span.fa-solid.fa-up-right-and-down-left-from-center
    .position-absolute.top-0.w-100.mt-3.mt-md-5.px-3.px-md-5.px-xl-7
      .d-flex.align-items-center.bg-secondary.overflow-hidden.rounded-1(style="height: 46px")
        .h-100.px-3.d-flex.align-items-center.bg-danger-subtle.position-relative.z-5
          span.fa-solid.fa-circle.text-danger.me-md-2
          h3.mb-0.fw-bold.text-nowrap.d-none.d-md-block Live Tracking
        .swiper-theme-container.w-100
          .swiper.theme-slider(data-swiper!={
            loop: true,
            spaceBetween: 40,
            centeredSlides: true,
            slidesPerView: 'auto',
            autoplay: {
              delay: 0
            },
            speed: 4000,
            grabCursor: true,
          })
            .swiper-wrapper.swiper-continuous-autoplay
              each route, index in routes
                .swiper-slide.w-auto
                  .d-flex.align-items-center
                    h6.px-3.py-2.bg-primary-subtle.mb-0.fs-10.rounded-1.me-2= route.flightNo
                    img.me-1(src=`${CWD}assets${route.logo}`, alt="" width=16)
                    h6.mb-0.text-white.fw-semibold.me-3.text-nowrap= route.airLine
                    h6.mb-0.fw-semibold.text-white= route.from
                    span.fa-solid.fa-plane.text-primary.mx-2
                    h6.mb-0.fw-semibold.text-white.border-end.pe-6= route.to
    .flight-desc-card.p-3.bg-body-emphasis.rounded-3
      .row.gx-5.justify-content-between
        .col-auto
          table.fs-9
            tr
              th(style='width: 70px')
              th
              th
            tr
              td
