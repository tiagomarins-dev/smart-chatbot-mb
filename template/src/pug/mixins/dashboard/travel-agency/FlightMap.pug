              td.text-body-tertiary.pe-2 : 
              td
                h6.mb-0.text-nowrap.fw-semibold.text-body-tertiary Appa 707-RTX
            tr
              td
                h6.mb-0.text-body-tertiary Velocity
              td.text-body-tertiary.pe-2 : 
              td
                h6.mb-0.text-nowrap.fw-semibold.text-body-tertiary 450 km/h
        .col-auto
          table.fs-9
            tr
              th(style='width: 70px')
              th
              th
            tr
              td
                h6.mb-0.text-body-tertiary Airline
              td.text-body-tertiary.pe-2 : 
              td
                h6.mb-0.text-nowrap.fw-semibold.text-primary YIP YIP
            tr
              td
                h6.mb-0.text-body-tertiary Callsign
              td.text-body-tertiary.pe-2 : 
              td
                h6.mb-0.text-nowrap.fw-semibold.text-body-tertiary Skybison1
            tr
              td
                h6.mb-0.text-body-tertiary ETA
              td.text-body-tertiary.pe-2 : 
              td
                h6.mb-0.text-nowrap.fw-semibold.text-body-tertiary 12 hrs 57 mins
      .d-flex.align-items-center.gap-2.mt-3
        h6.mb-0.text-body-tertiary GRU
        .progress.flex-1(role="progressbar" aria-label="flight-destination-progress" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100")
          .progress-bar.bg-info.overflow-visible(style="width: 50%")
            span.fa-solid.fa-plane.text-info.position-absolute.end-0
        h6.mb-0.text-body-tertiary SJC