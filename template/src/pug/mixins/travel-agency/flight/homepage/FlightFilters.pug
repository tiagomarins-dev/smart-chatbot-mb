mixin FlightStops 
  div&attributes(attributes) 
    a.btn.py-2.px-3.d-flex.flex-between-center.collapse-indicator.text-body-highlight.bg-body-highlight(data-bs-toggle='collapse' href='#flightStops' role='button' aria-expanded='true' aria-controls='flightStops')
      h5.mb-0.fs-8 Stops
      span.fa-solid.fa-chevron-down.toggle-icon
    .collapse.show.p-3.pb-0#flightStops
      - 
        var flightStops = [
          {
            id: 'fligtStopsDirect',
            label: 'Direct'
          },
          {
            id: 'fligtStops1',
            label: '1 stop'
          },
          {
            id: 'fligtStops2',
            label: '2 stop'
          },
        ]
      each item in flightStops
        .form-check
          input.form-check-input(type='checkbox' id=`${item.id}`)
          label.form-check-label.fs-8.text-body(for=`${item.id}`) #{item.label}

