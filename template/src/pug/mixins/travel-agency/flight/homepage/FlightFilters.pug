                label.form-check-label.fs-9.text-body.lh-sm(for=`${airport.split(' :')[0]}`) #{airport}

mixin FlightBaggage
  div&attributes(attributes) 
    a.btn.py-2.px-3.d-flex.flex-between-center.collapse-indicator.text-body-highlight.bg-body-highlight(data-bs-toggle='collapse' href='#flightBaggage' role='button' aria-expanded='true' aria-controls='flightBaggage')
      h5.mb-0 Baggage
      span.fa-solid.fa-chevron-down.toggle-icon
    .collapse.show.p-3.pb-0#flightBaggage
      .d-flex.gap-2.justify-content-between
        div 
          h5.mb-3.text-body-highlight Carry on bag
          .input-group.flex-nowrap.gap-1(data-quantity)
            button.btn.btn-phoenix-primary.px-2.rounded(data-type="minus" type='button')
              span.fa-solid.fa-minus.px-1
            input.form-control.border-translucent.input-spin-none.text-center.rounded(id="carryOnBag" type="number" value='2')
            button.btn.btn-phoenix-primary.px-2.rounded(data-type="plus" type='button')
              span.fa-solid.fa-plus.px-1
        div 
          h5.mb-3.text-body-highlight Checked bag
          .input-group.flex-nowrap.gap-1(data-quantity)
            button.btn.btn-phoenix-primary.px-2.rounded(data-type="minus" type='button')
              span.fa-solid.fa-minus.px-1
            input.form-control.border-translucent.input-spin-none.text-center.rounded(id="checkedBag" type="number" value='2')
            button.btn.btn-phoenix-primary.px-2.rounded(data-type="plus" type='button')
              span.fa-solid.fa-plus.px-1

