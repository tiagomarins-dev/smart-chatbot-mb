mixin FlightDuration
  div&attributes(attributes) 
    a.btn.py-2.px-3.d-flex.flex-between-center.collapse-indicator.text-body-highlight.bg-body-highlight(data-bs-toggle='collapse' href='#flightDuration' role='button' aria-expanded='true' aria-controls='flightDuration')
