      .noUi-primary-lighter.noUi-handle-primary.noUi-slider-medium.noUi-handle-circle.px-1.mt-3(
        data-nouislider-values!=['45m', '46m', '47m', '48m', '49m', '50m', '51m', '52m', '53m', '54m', '55m']
        data-nouislider!={
          start: ['48m'],
          connect: [true, false]
        }
      )

