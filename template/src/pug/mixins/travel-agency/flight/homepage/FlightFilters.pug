            {
              id: 'dhakaAirports',
              label: 'Dhaka',
              airports: ['DAC : Hazrat Shahjalal International Airport']
            },
            {
              id: 'sylhetAirports',
              label: 'Sylhet',
              airports: ['ZYL : Osmani International Airport', 'GNJ : Gajikalu Interdimensional Airport']
            },
          ]
