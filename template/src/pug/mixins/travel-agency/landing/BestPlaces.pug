    .container-fluid.px-sm-0
      .swiper-theme-container.swiper-slide-nav-top
        .swiper-nav
          .swiper-button-next
            span.fas.fa-chevron-right.text-primary(data-fa-transform='shrink-3')
          .swiper-button-prev
            span.fas.fa-chevron-left.text-primary(data-fa-transform='shrink-3')
        .swiper.theme-slider(data-swiper!={
          loop: true,
          centeredSlides: true,
          autoplay: true,
          centeredSlidesBounds: true,
          spaceBetween: 16,
          slidesPerView: 1,
          speed: 1500,
          breakpoints: {
            576: {
              slidesPerView: 'auto',
            }
          },
        })
          .swiper-wrapper
            each data, index in placesData
              .swiper-slide.w-sm-auto
                a(href="#!").position-relative.rounded-3.overflow-hidden.d-block
                  img.w-100.w-sm-auto.object-fit-cover(src=`${CWD}assets${data.img}`, alt="" height=220)
                  .img-backdrop-faded
                    .image-reveal-content.mb-3
                      .d-flex.align-items-center.gap-2.mb-2
                        span.fa-solid.fa-hotel.text-secondary-lighter
                        h6.mb-0.text-secondary-lighter.fw-semibold #{data.hotels} Hotels
                      .d-flex.align-items-center.gap-2
                        span.fa-solid.fa-tree-city.text-secondary-lighter
                        h6.mb-0.text-secondary-lighter.fw-semibold #{data.packages} Tour Package
                    .d-flex.align-items-center.gap-2
                      img(src=`${CWD}assets${data.flag}`, alt="")
                      h4.mb-0.text-white= data.country