mixin HotelDetails(data)
  .card.card-img-shift.border-0.mx-auto
    .rounded-3.overflow-hidden.w-100.position-relative.z-5
      img(src=`${CWD}assets${data.image}`, alt="" height=250).w-100
      button.btn.btn-wish.position-absolute.top-0.end-0.mt-3.me-3
        span.far.fa-heart
    .card-body.p-0
      .card-content
        .d-flex.align-items-center.justify-content-between.flex-wrap.gap-2.mb-4
          div
            span.badge.badge-phoenix.px-1.me-2(class=`badge-phoenix-${data.status.type}`)= data.status.label
            span.badge.badge-phoenix.px-1(class=`badge-phoenix-${data.package.type}`)= data.package.label
          h6
            span.fa-solid.fa-star.text-warning.me-1
            | #{data.rating} (#{data.stay}k stay)
        a(href="#!").fw-bold.fs-7.text-body-emphasis.mb-2.text-primary-hover= data.name
        a(href="#!").fw-semibold.text-body-tertiary.mb-3.d-block
          span(data-feather='map-pin').me-1
          | #{data.located}
        h6.fe-semibold.text-body-tertiary.d-flex.align-items-center.gap-1.mb-4
          | From 
          span.fw-bolder.fs-7.text-body-highlight $#{data.price}
          | / per night
        button.btn.btn-primary.px-5 Book Now

