mixin FooterList(...items)
  each item in items
    li.mb-1
      a.text-secondary-lighter(href='#!')= item

mixin HotelFooter 
  section.py-0&attributes(attributes)
    .container-medium-md.px-0.px-md-3
      .p-5.p-sm-7.py-xl-12.px-xl-15.rounded-md-2.overflow-hidden.position-relative
        +Background({
          image: `${CWD}assets/img/bg/43.png`,
          attrs: {
            style: 'background-position: center; background-size: cover',
          },
          className: 'bg-holder overlay bg-opacity-85'
        })

        .row.g-5.position-relative.justify-content-between
          .col-md-6.col-lg-3
            h5.text-white.mb-3 Discover
            .row.g-3 
              .col
                ul.list-unstyled.mb-0
                  +FooterList('Home', 'Terms', 'Talent & culture', 'Destination', 'Sitemap')
              .col
                ul.list-unstyled.mb-0
                  +FooterList('Refund policy', 'EMI Policy', 'Privacy Policy')
          .col-md-6.col-lg-3
            h5.text-white.mb-3 Contact
            a(href="mailto:info@phoenixtravels.com").d-block.text-secondary-lighter.mb-1.text-nowrap
              span.fa-solid.fa-envelope.me-2.me-lg-1.me-xl-2
              | info@phoenixtravels.com
            a(href="tel:+13134048290").d-block.text-secondary-lighter.mb-1
              span.fa-solid.fa-phone.me-2.me-lg-1.me-xl-2 
              | +13134048290
          .col-lg-5
            h2.text-white.mb-2.fw-semibold Enjoy your trip to the fullest
            p.mb-5.text-secondary-lighter Sign up and get notified
              br
              | about best deals immediately 
            .d-flex.gap-2
              .form-icon-container.flex-1
                input.form-control.form-icon-input(type="text" placeholder="Your email address")
                span.fa-solid.fa-envelope.form-icon.text-body.fs-9(data-fa-transform="up-2")
              button.btn.btn-primary.rounded Sign up