mixin EmployeeRecordsTableRow(item)
  tr
    td.align-middle.date.white-space-nowrap
      p.fs-9.fw-semibold.text-body-secondary.mb-0=item.date
    td.align-middle.employees.white-space-nowrap.text-center
      p.fs-9.fw-semibold.text-body-secondary.mb-0=item.employees
    td.align-middle.text-center.change 
      p.fs-9.fw-semibold.text-body-secondary.mb-0=item.change
    td.align-middle.text-end.growth.white-space-nowrap
      p.fs-9.fw-semibold.mb-0(class=item.isInLoss ? 'text-danger' : 'text-success') #{item.growth}%
mixin DetailsView(item)
  div(class=item.className)
    .d-flex.align-items-center.mb-1
      span.fa-solid.fs-8(class=item.icon style="width: 16px;")
      h5.my-2.line-clamp-1.ms-2=item.title
    .ps-4 
      if item.link 
        a(href=item.link)=item.content 
      else if item.image 
        .d-flex.align-items-center.gap-2 
          img.img-fluid.d-dark-none(src=item.image alt='img')
          if item.darkImage
            img.img-fluid.d-light-none(src=item.darkImage alt='dark-image')
          p.mb-0.text-body-secondary=item.content
      else
        p.mb-0.text-body-secondary=item.content


