mixin CollapsibleContainer
  .card&attributes(attributes) 
    .card-body
      .d-flex.flex-wrap.flex-between-center.gap-3.gap-xxl-5
        a.btn.d-flex.align-items-center.gap-2.p-0.watchlist-collapsible.collapse-indicator(data-bs-toggle='collapse' href='#holdingSummary' role='button' aria-expanded='true' aria-controls='holdingSummary')
          span.fa-solid.fa-chevron-down.toggle-icon
          h4.fs-8.fs-sm-7.mb-0.text-body-highlight Holdings Summary
        .scrollbar.summery-statistics 
          .row.g-0.flex-nowrap.py-1
            .col-auto.pe-4.border-end 
              .d-flex.align-items-center.gap-2
                h6.fw-normal.text-body-tertiary.mb-0 Total Holding
                h5.mb-0.text-body $1,000.00
                .badge.badge-phoenix.badge-phoenix-success.fs-10 +1.71%
            .col-auto.px-4.border-end 
              .d-flex.align-items-center.gap-2
                h6.fw-normal.text-body-tertiary.mb-0 Day Change
                h5.mb-0.text-danger -$5,000.00
                .badge.badge-phoenix.badge-phoenix-danger.fs-10 +1.71%
            .col-auto.ps-4
              .d-flex.align-items-center.gap-2
                h6.fw-normal.text-body-tertiary.mb-0 Unrealized Gain/Loss
                h5.mb-0.text-success +$3,000.00
                .badge.badge-phoenix.badge-phoenix-success.fs-10 +1.71%
      .collapse.show#holdingSummary
        .row.g-0.mt-3 
          .col-12.col-xl-4.col-xxl-3.pe-xl-5.border-end-xl.overflow-hidden 
            h3.mb-3 Summery
            table.table.mb-2
              tbody 
                  tr
                    td.align-middle.p-0.pb-2.border-bottom-0
                      p.mb-0 Market Value
                    td.align-middle.text-end.p-0.pb-2.border-bottom-0
                      h5.fw-semibold.mb-0 $688.43
                  tr
                    td.align-middle.p-0.pb-2.border-bottom-0
                      p.mb-0 Day Change
                    td.align-middle.text-end.p-0.pb-2.border-bottom-0
                      h5.mb-0.fw-semibold +$0.00 (0.00%)
                  tr
                    td.align-middle.p-0.pb-2.border-bottom-0
                      p.mb-0 Unrealized G/L
                    td.align-middle.text-end.p-0.pb-2.border-bottom-0
                      h5.mb-0.fw-semibold.text-danger +$0.00 (0.00%)
                  tr
                    td.align-middle.p-0.pb-3.border-bottom-0
                      p.mb-0 Realized Value
                    td.align-middle.text-end.p-0.pb-3.border-bottom-0
                      h5.mb-0.fw-semibold $0.00
                  tr
                    td.align-middle.p-0.pt-3.border-bottom-0.border-top.border-dashed
                      h4.mb-0 Total: 
                    td.align-middle.text-end.p-0.pt-3.border-bottom-0.border-top.border-dashed
                      h4.mb-0 $688.43

          .col-xl-8.col-xxl-9.ps-xl-5.mt-5.mt-xl-0 
            .row.g-3.g-xxl-5.flex-between-center.mb-3
              .col-12.col-xxl-auto 
                h4  Chart Report 
                p.mb-0 No. of bookings fulfilled &amp; cancelled
              .col-12.col-xxl-auto 
                .scrollbar 
                  .btn-group.btn-group-sm.stock-btn-group(role='group' aria-label='portfolio-chart-btn-group')
                    button.btn.btn-phoenix-secondary(data-bar-filter data-value='1d') 1D
                    button.btn.btn-phoenix-secondary(data-bar-filter data-value='5d') 5D
                    button.btn.btn-phoenix-secondary(data-bar-filter data-value='1m') 1M
                    button.btn.btn-phoenix-secondary(data-bar-filter data-value='3m') 3M
                    button.btn.btn-phoenix-secondary(data-bar-filter data-value='6m') 6M
                    button.btn.btn-phoenix-secondary.active(data-bar-filter data-value='1y') 1Y
                    button.btn.btn-phoenix-secondary(data-bar-filter data-value='all') All
            .echart-watchlist-report-chart(style='width: 100%; height: 250px')