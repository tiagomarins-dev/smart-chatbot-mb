mixin SettingsProfileCard
	.card&attributes(attributes)
		.card-header.hover-actions-trigger.position-relative.mb-6(style="min-height: 130px; ")
			.bg-holder.rounded-top(style=`background-image: linear-gradient(0deg, #000000 -3%, rgba(0, 0, 0, 0) 83%), url(${CWD}assets/img/generic/59.png)`)
				input#upload-settings-cover-image.d-none(type="file")
				label.cover-image-file-input(for="upload-settings-cover-image")
				.hover-actions.end-0.bottom-0.pe-1.pb-2.text-white.dark__text-gray-1100
					span.fa-solid.fa-camera.me-2
			input#upload-settings-porfile-picture.d-none(type="file")
			label.avatar.avatar-4xl.status-online.feed-avatar-profile.cursor-pointer(for="upload-settings-porfile-picture")
				img(src=`${CWD}assets/img/team/20.webp` width=200 alt='').rounded-circle.img-thumbnail.shadow-sm.border-0

		.card-body
			.row
				.col-12
					.d-flex.flex-wrap.mb-2.align-items-center
						h3.me-2 Ansolo Lazinatov
						span.fw-normal.fs-8 u/hansolo
					.d-flex.d-xl-block.d-xxl-flex.align-items-center
						.d-flex.mb-xl-2.mb-xxl-0
							span.fa-solid.fa-user-group.fs-10.me-2.me-lg-1.me-xl-2
							h6.d-inline-block.mb-0 1297
								span.fw-semibold.ms-1.me-4 Followers
						.d-flex
							span.fa-solid.fa-user-check.fs-10.me-2.me-lg-1.me-xl-2
							h6.d-block.d-xl-inline-block.mb-0 3971
								span.fw-semibold.ms-1 Following

mixin LeftSidebar
	.border-bottom.border-translucent.border-dashed.pb-3.mb-4
		h5.text-body.mb-3 Who will be able to see your profile?
		.form-check
			input#onlyMe.form-check-input(type='radio', checked name='profiileVisibility')
			label.form-check-label.fs-8(for='onlyMe') Only me
		.form-check
			input#myFollowers.form-check-input(type='radio' name='profiileVisibility')
			label.form-check-label.fs-8(for='myFollowers') My followers
		.form-check
			input#everyone.form-check-input(type='radio' name='profiileVisibility')
			label.form-check-label.fs-8(for='everyone') Everyone

	.border-bottom.border-translucent.border-dashed.pb-3.mb-4
		h5.text-body.mb-3 Who can tag you?
		.form-check
			input#tagGroupMembers.form-check-input(type='radio', checked name='tagPermission')
			label.form-check-label.fs-8(for='tagGroupMembers') Group Members
		.form-check
			input#tagEveryone.form-check-input(type='radio' name='tagPermission')
			label.form-check-label.fs-8(for='tagEveryone') Everyone

	.border-bottom.border-translucent.border-dashed.pb-3.mb-4
		.form-check
			input#showEmail.form-check-input(type='checkbox' name='showEmail')
			label.form-check-label.fs-8(for='showEmail') Allow users to show your email
		.form-check
			input#showExperiences.form-check-input(type='checkbox' name='showExperiences')
			label.form-check-label.fs-8(for='showExperiences') Allow users to show your experiences
		.form-check
			input#showFollowers.form-check-input(type='checkbox', checked name='showFollowers')
			label.form-check-label.fs-8(for='showFollowers') Allow users to show your followers

	.mb-4
		.form-check.form-switch
			input#showPhone.form-check-input(type='checkbox', checked name='showPhone')
			label.form-check-label.fs-8(for='showPhone') Show your phone number
		.form-check.form-switch
			input#permitFollow.form-check-input(type='checkbox', checked name='permitFollow')
			label.form-check-label.fs-8(for='permitFollow') Permit users to follow you.

