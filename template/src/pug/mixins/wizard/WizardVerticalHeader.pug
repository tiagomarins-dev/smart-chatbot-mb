mixin WizardVerticalHeader(config)
  .scrollbar.mb-4
    ul.nav.justify-content-between.flex-nowrap.nav-wizard.nav-wizard-vertical-md
      li.nav-item
        a(href=config.tab1 data-bs-toggle='tab' data-wizard-step='1').nav-link.active.py-0.py-md-3
          .text-center.d-inline-block.d-md-flex.align-items-center.gap-3
            span.nav-item-circle-parent
              span.nav-item-circle
                span.fa-solid.fa-file.nav-item-icon
                span.fa-solid.fa-check.check-icon
            span.nav-item-title.fs-9.fs-xl-8 Account
      li.nav-item
        a(href=config.tab2 data-bs-toggle='tab' data-wizard-step='2').nav-link.py-0.py-md-3
          .text-center.d-inline-block.d-md-flex.align-items-center.gap-3
            span.nav-item-circle-parent
              span.nav-item-circle
                span.fa-solid.fa-location-dot.nav-item-icon
                span.fa-solid.fa-check.check-icon
            span.nav-item-title.fs-9.fs-xl-8 Personal
      li.nav-item
        a(href=config.tab3 data-bs-toggle='tab' data-wizard-step='3').nav-link.py-0.py-md-3
          .text-center.d-inline-block.d-md-flex.align-items-center.gap-3
            span.nav-item-circle-parent
              span.nav-item-circle
                span.fa-solid.fa-mug-saucer.nav-item-icon
                span.fa-solid.fa-check.check-icon
            span.nav-item-title.fs-9.fs-xl-8 Billing
      li.nav-item
        a(href=config.tab4 data-bs-toggle='tab' data-wizard-step='4').nav-link.py-0.py-md-3
          .text-center.d-inline-block.d-md-flex.align-items-center.gap-3
            span.nav-item-circle-parent
              span.nav-item-circle
                span.fa-solid.fa-images.nav-item-icon
                span.fa-solid.fa-check.check-icon
            span.nav-item-title.fs-9.fs-xl-8 Done