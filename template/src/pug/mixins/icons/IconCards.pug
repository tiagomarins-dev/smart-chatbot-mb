mixin IconExampleCard
 +ComponentCard({
    title: 'Example',
    anchor: true,
    description: `You can use these icons with color and font-size helper classes like the example below: `,
    descriptionClass: 'mt-2 mb-0'
  })&attributes(attributes)
    block

mixin IconExampleWithIndicatorCard
 +ComponentCard({
    title: 'Example with indicator',
    anchor: true,
    description: `You can use these icons with an indicator like the example below:`,
    descriptionClass: 'mt-2 mb-0'
  })&attributes(attributes)
    block

mixin IconListHeader(config)
  - var config = Object.assign({search: true}, config);
  .card-header.border-bottom.bg-body
    .row.flex-between-center.g-2
      .col-auto
        h4.mb-0 Icons List
      if config.search
        .col-auto.col-sm-6
          .text-end
            input.form-control.d-inline-block.rounded-3.search(type="search" placeholder="Search" style='width: 250px;')

mixin IconCard(icon)
  .col-lg-3.col-md-4.col-sm-6
    span.icon-list-item.d-none=icon
    .border.rounded-2.p-3.mb-4.text-center.bg-body-emphasis.dark__bg-gray-1000.shadow-sm
      block
      input.form-control.form-control-sm.mt-3.text-center.w-100.text-dark.dark__text-gray-100.bg-body-secondary.dark__bg-gray-1100(type='text' readonly value=icon)


mixin IconSearchFallback
  .text-center
    p.fallback.fw-bold.fs-7.d-none No icons found