    var files = [
      {
        name: 'Federico_godarf_design.zip',
        size: '53.34 MB',
        date: 'Dec 8, 2011',
        icon: 'fa-solid fa-file-zipper',
        format: 'zip'
      },
      {
        name: 'Restart_lyf.bat',
        size: '11.13 KB',
        date: 'Dec 2, 2011',
        icon: 'fa-solid fa-file-code',
        format: 'bat'
      },
      {
