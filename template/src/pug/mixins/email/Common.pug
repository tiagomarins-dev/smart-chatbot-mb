		.d-flex.align-items-center.flex-1.me-2
			button.btn.btn-sm.p-0.me-2(type="button" onclick="location.reload()")
				span.text-primary.fas.fa-redo.fs-10
			p.fw-semibold.fs-10.text-body-tertiary.text-opacity-85.mb-0.lh-sm.text-nowrap Last refreshed 1m ago
		.d-flex
			p.text-body-tertiary.text-opacity-85.fs-9.fw-semibold.mb-0.me-3 #{inbox ? 'Showing :' : ''} 
				span.text-body 1-7 
				| of 
				span.text-body 205
			button.btn.p-0.me-3(type="button")
				span.text-body-quaternary.fa-solid.fa-angle-left.fs-10
			button.btn.p-0(type="button")
				span.text-primary.fa-solid.fa-angle-right.fs-10
	.border-top.border-translucent.py-2.d-flex.justify-content-between
		.form-check.mb-0.fs-8
			input.form-check-input(type='checkbox' data-bulk-select-row)
		div
			button.btn.p-0.me-2.text-body-quaternary.hover.text-body-tertiary.text-opacity-85(data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Archive")
				span.fas.fa-archive.fs-10
			button.btn.p-0.me-2.text-body-quaternary.hover.text-body-tertiary.text-opacity-85(data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Delete")
				span.fas.fa-trash.fs-10
			button.btn.p-0.me-2.text-body-quaternary.hover.text-body-tertiary.text-opacity-85(data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Star")
				span.fas.fa-star.fs-10
