mixin EmailRow(config,isLast)
	.border-top.border-translucent.hover-actions-trigger(class=`${!isLast ? 'py-3': 'pt-3'}`)
		.row.align-items-sm-center.gx-2
			.col-auto
				.d-flex.flex-column.flex-sm-row(class=`${config.read ? '' : ''}`)
					input.form-check-input.mb-2.m-sm-0.me-sm-2(type='checkbox' id=`checkbox-${config.id}` data-bulk-select-row)
					button.btn.p-0
						span(class=`${config.star ? 'fas text-warning' : 'far text-body-quaternary'}`).fa-star

			.col-auto
				if(config.img)
					+Avatar({size: 's', img: `team/${config.img}`, round: 'circle',imgClass: config.avatarPlaceholder ? 'avatar-placeholder' : false}).rounded-circle
				else
					+Avatar({size: 's', name: config.name})
			.col-auto
				a(href=`${CWD}${paths['email-detail']}` class=`${config.read ? 'text-body fw-semibold' : 'text-body-emphasis fw-bold'}`).inbox-link.fs-9=config.user
			.col-auto.ms-auto
				.hover-actions.end-0
					+ActionButton


				span.fs-10(class=`${!config.read ? 'fw-bold' : ''}`)=config.time
		.ms-4.mt-n3.mt-sm-0.ms-sm-11
			a(href=`${CWD}${paths['email-detail']}`).d-block.inbox-link
				span.fs-9.line-clamp-1(class=`${!config.read ? 'text-body-emphasis' : 'text-body-highlight'}`)=config.title
				p.fs-9.ps-0.text-body-tertiary.mb-0.line-clamp-2=config.description
			if(config.attachments)
				each attachment in config.attachments
					if(attachment.type === 'img')
						a.d-inline-flex.align-items-center.border.border-translucent.rounded-pill.px-3.py-1.me-2.mt-2.inbox-link(href=`${CWD}assets/img/${attachment.src}` data-gallery=`gallery-${config.id}`)
							span(class=attachment.icon)
							span.ms-2 #{attachment.fileName}
					else
						a.d-inline-flex.align-items-center.border.border-translucent.rounded-pill.px-3.py-1.me-2.mt-2.inbox-link(href="#!")
							span(class=attachment.icon)
							span.ms-2.fw-bold.fs-10.text-body #{attachment.fileName}

