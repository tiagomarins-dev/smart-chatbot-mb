				span.fas.fa-tag.fs-10

mixin ActionButton(user)
	button.btn.btn-phoenix-secondary.btn-icon.dropdown-toggle.dropdown-caret-none(type='button' data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false" data-bs-reference="parent")
		span.fa-solid.fa-ellipsis
	.dropdown-menu.dropdown-menu-end.py-2(aria-labelledby=id )
		a(href='#!').dropdown-item Mark Unread
		a(href='#!').dropdown-item Mark Important
		a(href='#!').dropdown-item Archive
		a(href='#!').dropdown-item Download
		a(href='#!').dropdown-item Print
		a(href='#!').dropdown-item Report Spam
		a(href='#!').dropdown-item Report Phishing
		a(href='#!').dropdown-item Mute #{user ? user : 'Jessica Ball'}
		a(href='#!').dropdown-item Block #{user ? user : 'Jessica Ball'}
		a(href='#!').dropdown-item.text-danger Delete