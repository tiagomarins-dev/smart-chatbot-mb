mixin EmailSidebar
	.email-content.scrollbar-overlay
		.d-flex.justify-content-between.align-items-center
			p.text-uppercase.fs-10.text-body-tertiary.text-opacity-85.mb-2.fw-bold mailbox
			button.btn.d-lg-none.p-0.mb-2(data-phoenix-dismiss="offcanvas")
				span.uil.uil-times.fs-8

		ul.nav.flex-column.border-top.border-translucent.fs-9.vertical-nav.mb-4
			each item in sidebarItems.slice(0,5)
				li.nav-item
					a.nav-link.py-2.ps-0.pe-3.border-end.border-bottom.border-translucent.text-start.outline-none(aria-current='page' class=item.active ? 'active' : '' href=item.link ? item.link : '#!') 
