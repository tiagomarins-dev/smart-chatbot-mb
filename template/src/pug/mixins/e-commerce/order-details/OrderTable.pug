mixin OrderTableRow(data,index)
  tr.hover-actions-trigger.btn-reveal-trigger.position-static
    td.align-middle.white-space-nowrap.py-2
      a(href=`${CWD}${paths['e-commerce-fe-product-details']}`).d-block.border.border-translucent.rounded-2
        img(src=`${CWD}assets/img/${data.productImage}` alt="" width=53)
    td.products.align-middle.py-0
      a.fw-semibold.line-clamp-2.mb-0(href=`${CWD}${paths['e-commerce-fe-product-details']}`)=`${data.product}`
    td.color.align-middle.white-space-nowrap.text-body.py-0.ps-4=data.color
    td.size.align-middle.white-space-nowrap.text-body-tertiary.fw-semibold.py-0.ps-4=data.size
    td.price.align-middle.text-body.fw-semibold.text-end.py-0.ps-4=data.price
    td.quantity.align-middle.text-end.py-0.ps-4.text-body-tertiary=data.quantity
    td.total.align-middle.fw-bold.text-body-highlight.text-end.py-0.ps-4=data.total


