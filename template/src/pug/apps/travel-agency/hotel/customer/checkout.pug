extends ../../../../layouts/LayoutHotel
include ../../../../mixins/travel-agency/hotel/SummaryCard

append variables
  - var disableNavigationType = true;
  - var disableHorizontalNavbarShape = true;
  - var disableVerticalNavbarAppearance = true;
  - var disableHorizontalNavbarAppearance = true;
  - var activeNavItem = 'Check out';

block hotelContent
  +Section("container-medium").pt-6.pb-9
    nav.mb-3(aria-label='breadcrumb')
      ol.breadcrumb.mb-0
        li.breadcrumb-item
          a(href='#') Page 1
        li.breadcrumb-item
          a(href='#') Page 2
        li.breadcrumb-item.active(aria-current='page') Default
    h2.mb-5 Check out
    .row.justify-content-between 
      .col-lg-7.col-xl-6
        form(id=`checkoutForm1`)
          hr.mt-0.mb-7
          h3.fw-bold.mb-5 Enter your details
          h5.mb-3 Are you travelling for work?
          .form-check.form-check-inline.me-4
            input.form-check-input#no(type='radio' name='tripTypeRadio' value='no' checked)
            label.form-check-label(for='no') No
          .form-check.form-check-inline
            input.form-check-input#yes(type='radio' name='tripTypeRadio' value='yes')
            label.form-check-label(for='yes') Yes
          .row.g-3.mb-5.mt-1
            .col-sm-6
              label(for='first-name').fw-bold.text-body-highlight.mb-1 First name
              input.form-control(type='text' id='first-name' placeholder='First name')
            .col-sm-6
              label(for='last-name').fw-bold.text-body-highlight.mb-1 Last name
              input.form-control(type='text' id='last-name' placeholder='Last name')
          .row.g-3
            .col-sm-6
              label(for='email-address').fw-bold.text-body-highlight.mb-1 Email address
              input.form-control(type='email' id='email-address' placeholder='Email address')
            .col-sm-6
              label(for='confirm-email-address').fw-bold.text-body-highlight.mb-1 Confirm email address
              input.form-control(type='email' id='confirm-email-address' placeholder='Confirm email address')
          h5.mb-3.mt-7 Who are you booking for?
          .form-check.form-check-inline.me-4
            input.form-check-input#me(type='radio' name='bookingPersonRadio' value='no' checked)
            label.form-check-label(for='me') I am the main guest
          .form-check.form-check-inline
            input.form-check-input#else(type='radio' name='bookingPersonRadio' value='yes')
            label.form-check-label(for='else') I am booking for somebody else
          h5.mb-3.mt-6 Add to your stay
          .form-check.mb-4
            input.form-check-input#airportShuttle(type='checkbox')
            label.form-check-label.fw-normal.fs-8.text-body(for='airportShuttle') 
              | I am interested in requesting an airport shuttle
              span.d-block.fs-9.text-body-tertiary We'll tell your accommodation what you're interested in so they can provide details and costs.
          .form-check
            input.form-check-input#rentingCar(type='checkbox')
            label.form-check-label.fw-normal.fs-8.text-body(for='rentingCar') 
              | I'm interested in renting a car
              span.d-block.fs-9.text-body-tertiary Make the most of your trip and check the car rental options in your booking confirmation.
          h5.mb-3.mt-6 Your arrival time
          .row.gx-2 
            .col-6.col-sm-3
              select.form-select
                option(value='1') 12:00
                option(value='2') 03:00
                option(value='3') 06:00
                option(value='4') 09:00
            .col-6.col-sm-3
              select.form-select
                option(value='am') AM
                option(value='pm') PM
          h5.mb-3.mt-7 Review house rules
          p Your host would like you to agree to the following house rules:
          p.mb-2
            span.fa-solid.fa-circle.text-body-quaternary.fs-10.me-2(data-fa-transform='up-2')
            | No smoking
          p
            span.fa-solid.fa-circle.text-body-quaternary.fs-10.me-2(data-fa-transform='up-2')
            | Pets are not allowed 
          p.text-info.mb-7 By continuing to the next step, you are agreeing to these house rules.
          h5.mb-3 Special requests
          p.fs-9.text-body-tertiary.mb-4 Special requests cannot be guaranteed, but the property will do its best to meet your needs. You can always make a special request after your booking is complete!
          textarea.form-control(name="requestText" rows="5" id="requestText" placeholder='Type your request')
          hr.mt-7.mb-5
          a(href=`${CWD}${paths['hotel-payment']}`).btn.btn-primary
            | Final details
            span.fa-solid.fa-chevron-right.ms-2(data-fa-transform="shrink-3")
      .col-lg-5.col-xl-4
        +SummaryCard.mt-5.mt-lg-0