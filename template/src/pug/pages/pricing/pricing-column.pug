mixin PricingCard(data)
  .d-flex.flex-column.justify-content-between.h-100
    div
      img.mb-4.d-dark-none(src=`${CWD}assets/img/spot-illustrations/${data.icon}`, alt="" width='120' height="96")
      img.mb-4.d-light-none(src=`${CWD}assets/img/spot-illustrations/dark_${data.icon}`, alt="" width='120' height="96")
      .mb-sm-5
        h3.mb-2=data.title
        p.text-body-secondary.mb-0.pe-3!=data.description
    div
      .d-flex.align-items-center.mb-4
        h3.display-3.fw-bolder=data.price
        if(data.price !== 'Free')
          h5.fs-8.fw-normal.ms-1 / month
      button.btn.btn-lg.w-100.mb-6(class=data.buyBtnClass) Buy
      h5.mb-4 Whatâ€™s included
      ul.fa-ul(style='--fa-li-margin: 1.5em;')
        li.text-body-secondary.mb-2
          span.fa-li
            span.fas.fa-check.text-primary
          | Timeline
        li.mb-2(class=data.features.advanced_search ? 'text-body' : 'text-body-quaternary')
          span.fa-li.me-2.stack-icon-item
            span.fa-stack.fs-11
              span.fas.fa-circle.fa-stack-2x(class=data.features.advanced_search ? 'text-success' : 'text-body-quaternary text-opacity-50')
              span.fas.fa-stack-1x.fa-inverse(class=data.features.advanced_search ? 'fa-check text-white dark__text-dark' : 'fa-times text-body-tertiary')
          | Advanced Search
        li.mb-2(class=data.features.custom_fields ? 'text-body' : 'text-body-quaternary')
          span.fa-li.me-2.stack-icon-item
            span.fa-stack.fs-11
              span.fas.fa-circle.fa-stack-2x(class=data.features.custom_fields ? 'text-success' : 'text-body-quaternary text-opacity-50')
              span.fas.fa-stack-1x.fa-inverse(class=data.features.custom_fields ? 'fa-check text-white dark__text-dark' : 'fa-times text-body-tertiary')
          | Custom fields
          if data.features.newBadge
            span.badge.badge-phoenix.badge-phoenix-primary.ms-2.fs-10 New
        li.mb-2(class=data.features.task_dependencies ? 'text-body' : 'text-body-quaternary')
          span.fa-li.me-2.stack-icon-item
            span.fa-stack.fs-11
              span.fas.fa-circle.fa-stack-2x(class=data.features.task_dependencies ? 'text-success' : 'text-body-quaternary text-opacity-50')
              span.fas.fa-stack-1x.fa-inverse(class=data.features.task_dependencies ? 'fa-check text-white dark__text-dark' : 'fa-times text-body-tertiary')
          | Task dependencies
        li.mb-2(class=data.features.private_teams ? 'text-body' : 'text-body-quaternary')
          span.fa-li.me-2.stack-icon-item
            span.fa-stack.fs-11
              span.fas.fa-circle.fa-stack-2x(class=data.features.private_teams ? 'text-success' : 'text-body-quaternary text-opacity-50')
              span.fas.fa-stack-1x.fa-inverse(class=data.features.private_teams ? 'fa-check text-white dark__text-dark' : 'fa-times text-body-tertiary')
          | Private teams & projects


