extends ../../../layouts/LayoutTheme
include ../../../layouts/LayoutSplitAuth

block wrapperContent
  +LayoutSplitBasic({img:35})
    .text-center.mb-6
      h4.text-body-highlight Reset new password
      p.text-body-tertiary Type your new password
      form.mt-5
        .position-relative.mb-2(data-password)
          input#password.form-control.form-icon-input.pe-6(type='password' placeholder='Type new password' data-password-input)
          button.btn.px-3.py-0.h-100.position-absolute.top-0.end-0.fs-7.text-body-tertiary(data-password-toggle)
            span.uil.uil-eye.show
            span.uil.uil-eye-slash.hide
        .position-relative.mb-4(data-password)
          input#confirmPassword.form-control.form-icon-input.pe-6(type='password' placeholder='Cofirm new password' data-password-input)
          button.btn.px-3.py-0.h-100.position-absolute.top-0.end-0.fs-7.text-body-tertiary(data-password-toggle)
            span.uil.uil-eye.show
            span.uil.uil-eye-slash.hide
        button.btn.btn-primary.w-100(type='submit') Set Password